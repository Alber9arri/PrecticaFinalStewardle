<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="dark_mode"
        android:title="@string/dark_mode"
        android:summary="@string/dark_mode_summ"
