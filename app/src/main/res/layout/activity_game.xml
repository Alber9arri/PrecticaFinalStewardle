            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver5age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver5debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver5wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver5"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver6name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver6flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver6team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver6number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver6age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver6debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver6wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/DriverInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/driver6"
        android:completionThreshold="1"
        android:dropDownHeight="wrap_content"
        android:hint="@string/hint_driver"
        android:visibility="visible"
        android:textColor="@color/text"
        android:dropDownVerticalOffset="-30dp"
        android:theme="@style/AutoCompleteTextViewStyle"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/buttonInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverInput"
        android:layout_marginTop="50dp"
        android:onClick="check"
        android:text="@string/check"
        android:textColor="@color/black"
        android:visibility="visible"
        android:layout_marginHorizontal="140dp"/>

    <Button
        android:id="@+id/buttonPlayAgain"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverInput"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="50dp"
        android:onClick="playAgain"
        android:text="@string/playAgain"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message"
        android:layout_below="@id/driver6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="10dp"/>

</RelativeLayout>
