<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">>

    <LinearLayout
        android:id="@+id/namesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/driver"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/flag"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/team"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/number"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/age"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Debut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/debut"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/Wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wins"
            android:gravity="center"
            android:textColor="@color/text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namesLayout"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver1name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver1flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver1team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver1number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/driver1age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/driver1debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/driver1wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver1"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver2name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver2flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver2team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver2number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver2age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver2debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver2wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver2"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver3name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver3flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver3team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver3number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver3age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver3debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver3wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver3"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver4name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver4flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver4team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver4number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver4age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver4debut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/driver4wins"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver4"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/driver5name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/driver5flag"
            android:layout_width="15dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/driver5team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/driver5number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
